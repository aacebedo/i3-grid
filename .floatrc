# rc file may be in the following paths:
# ~/.config/i3float/floatrc
# ~/.config/floatrc
# ~/.floatrc
# ./.floatrc  --> Same path as script (floatwm.py)

MetaData:
    Main: i3-float-wm
    ThisFileType: yaml
    Source: floatwm.py
Settings:
    # Name of your monitor as recorded by 'i3-msg -t get_outputs'
    # Exclude root displays (ex: xroot-0)
    DisplayMonitors:
        - "eDP1"
        - "HDMI1"
        - "VGA"
    DefaultGrid:
        Rows: 3
        Columns: 3

    # If you run floatwm on a non-floating window,
    # it can either prompt you, or automatically
    # convert to float without prompt.
    # boolean: true/false
    AutoConvertToFloat: false


